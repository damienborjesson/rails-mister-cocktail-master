<div class="banner half">
  <div class="banner-content">
      <h1><%= @cocktail.name %></h1>
      <%= link_to edit_cocktail_path(@cocktail) do %>
        <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
      <% end %>
  </div>
</div>

<div class="container cocktail-content">
  <div class="row">
    <div class="col-xs-8">
      <div class="description-content">
        <div class="description">
          <h3>Description</h3>
          <p><%= @cocktail.description %></p>
        </div>
        <h3>Ingredients</h3>
        <% @doses.each do |d| %>
          <div class="ingredients">
            <p class="ingredient"><%= d.ingredient.name %></p>
            <p class="volume"><%= d.description %></p>
            <%= link_to dose_path(d),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this ingredient ?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="form">
        <h3 class="text-center">Add an ingredient</h3>
        <div class="form-content">
          <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient, value_method: :id, prompt: "Select an ingredient"%>
          <%= f.input :description %>
          <%= f.submit "Add and ingredient", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

